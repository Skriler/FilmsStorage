@using System.Web.Optimization;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @FilmsStorage.Resources.Layouts._Layout.ApplicationName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modern")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar navbar-expand-lg navbar-light bg-light">
                <ul class="navbar-nav mr-auto">
                    <li>
                        @Html.ActionLink(FilmsStorage.Resources.Layouts._Layout.NavHome,
                            "Index", "Home", null, new { @class = "btn btn-info" })

                        @Html.ActionLink(FilmsStorage.Resources.Layouts._Layout.ChangeLanguage,
                            "ChangeLanguage", "Home", null, new { @class = "btn btn-success" })
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>
                            @Html.ActionLink(FilmsStorage.Resources.Layouts._Layout.NavMyProfile,
                                "Index", "Account", null, new { @class = "btn btn-info" })
                        </li>
                        <li>
                            @Html.ActionLink(FilmsStorage.Resources.Layouts._Layout.NavLogout,
                                "Logout", "Account", null, new { @class = "btn btn-danger" })
                        </li>
                    }
                    else
                    {
                        <li>
                            @Html.ActionLink(FilmsStorage.Resources.Layouts._Layout.NavRegister,
                                "Register", "Account", null, new { @class = "btn btn-info" })
                        </li>
                        <li>
                            @Html.ActionLink(FilmsStorage.Resources.Layouts._Layout.NavLogin, "" +
                                "Login", "Account", null, new { @class = "btn btn-success" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/js")

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @FilmsStorage.Resources.Layouts._Layout.ApplicationName</p>
        </footer>
    </div>

    @RenderSection("customScripts", required: false)
</body>
</html>