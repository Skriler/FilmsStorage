@using System.Web.Optimization;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Films Storage</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modern")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            @*<div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>*@
            <div class="">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("My profile", "Index", "Account", null, new { @class = "btn btn-info" })</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Account", null, new { @class = "btn btn-danger" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Register account", "Register", "Account", null, new { @class = "btn btn-info" })</li>
                        <li>@Html.ActionLink("Login", "Login", "Account", null, new { @class = "btn btn-success" })</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Films Storage</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/js")
</body>
</html>